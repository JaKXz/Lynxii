{
  "name": "lynxii",
  "version": "0.1.0-beta.0",
  "productName": "Lynxii",
  "description": "A simple and powerful dynamic communications network.",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "add:client": "yarn workspace lynxii-client add",
    "add:root": "yarn add -W",
    "add:server": "yarn workspace lynxii-server add",
    "build": "grunt build",
    "clean": "grunt clean:all",
    "exec:nyc": "nyc mocha",
    "exec:script": "node -r ts-node/register",
    "exec:tsc": "tsc",
    "preinstall": "yarn --ignore-scripts -W && grunt update",
    "start:server": "yarn exec:script server/index.ts",
    "test": "yarn build"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VevoxDigital/Lynxii.git"
  },
  "author": "Vevox Digital",
  "contributors": [
    {
      "id": "CynicalBusiness",
      "name": "Matthew Struble",
      "email": "matt@vevox.io"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/VevoxDigital/Lynxii/issues"
  },
  "homepage": "https://vevox.io/lynxii",
  "workspaces": [
    "src/*"
  ],
  "dependencies": {
    "debug": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/debug": "^0.0.30",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.3.1",
    "chai": "^4.1.2",
    "grunt": "^1.0.3",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-compress": "^1.4.3",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-exec": "^3.0.0",
    "load-grunt-tasks": "^4.0.0",
    "mocha": "^5.2.0",
    "remap-istanbul": "^0.11.1",
    "source-map-support": "^0.5.6",
    "time-grunt": "^1.4.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.1"
  }
}
