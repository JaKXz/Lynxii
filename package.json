{
  "name": "lynxii",
  "version": "0.0.1-dev",
  "productName": "Lynxii",
  "description": "Simple and powerful dynamic communications network for your home, business, lab, or factory.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "test": "nyc mocha"
  },
  "nyc": {
    "include": [
      "src/**/*.{ts,tsx}"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extensions": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "config": {
    "server": {
      "port": 22055,
      "address": "::1"
    },
    "license": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VevoxDigital/Lynxii.git"
  },
  "author": "Vevox Digital",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/VevoxDigital/Lynxii/issues"
  },
  "homepage": "https://vevox.io/lynxii",
  "dependencies": {
    "@types/debug": "^0.0.30",
    "@types/node": "^10.3.1",
    "@types/uuid": "^3.4.3",
    "debug": "^3.1.0",
    "lodash": "^4.17.4",
    "nconf": "^0.8.4",
    "uuid": "^3.2.1",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "chai": "^4.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.0",
    "tsconfig-paths": "^3.3.2",
    "typescript": "^2.9.1"
  }
}
