{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es6",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "moduleResolution": "node",
    "types": [ "node" ]
  },
  "exclude": [
    "dist/",
    "res/",
    "doc/",
    "coverage/",
    "node_modules/",
    "test/",
    "license.ts",
    "update.ts"
  ]
}
